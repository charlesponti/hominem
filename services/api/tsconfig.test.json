{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "../../.cache/service-api-tests.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "vitest.config.mts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo",
    ".cache",
    "coverage",
    "**/__mocks__",
    "*.tsbuildinfo",
    ".react-router/cache"
  ]
}
