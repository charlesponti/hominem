{
  "extends": ["../../tsconfig.base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node"],
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "../../.cache/service-api.tsbuildinfo"
  },
  "include": ["src/**/*.ts", "vitest.config.mts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo",
    ".cache",
    "coverage",
    "test",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__",
    "**/__mocks__",
    "*.tsbuildinfo",
    ".react-router/cache"
  ]
}
