{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "./build",
    "types": ["node"],
    "composite": true,
    "tsBuildInfoFile": "../../.cache/db.tsbuildinfo",
    "sourceMap": false,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".turbo",
    ".cache",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__",
    "**/__mocks__",
    "*.tsbuildinfo",
    ".react-router/cache"
  ]
}
