{
  "extends": "../../tsconfig.profiles/package-bundler.json",
  "compilerOptions": {
    "tsBuildInfoFile": "../../.cache/db.tsbuildinfo",
    "rootDir": "src",
    "outDir": "./build"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".turbo",
    ".cache",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__",
    "**/__mocks__",
    "*.tsbuildinfo"
  ]
}
