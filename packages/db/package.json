{
  "name": "@hominem/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "types": "./build/index.d.ts",
  "typesVersions": {
    "*": {
      ".": [
        "build/index.d.ts"
      ],
      "types/*": [
        "build/schema/*.types.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js",
      "default": "./build/index.js"
    },
    "./schema/*": "./build/schema/*.schema.js",
    "./schema/validations": "./build/schema/validations.js",
    "./schema/tables": "./build/schema/tables.js",
    "./schema/relations": "./build/schema/relations.js",
    "./schema/calendar.enums": "./build/schema/calendar.enums.js",
    "./test/fixtures": "./build/test/fixtures.js",
    "./test/utils": "./build/test/utils.js",
    "./test/db-transaction": "./build/test/db-transaction.js",
    "./types/*": {
      "types": "./build/schema/*.types.d.ts",
      "import": "./build/schema/*.types.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "prepare": "bun run build",
    "clean": "rm -rf build",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:migrate:test": "NODE_ENV=test bunx drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "0.45.1",
    "drizzle-zod": "^0.7.0",
    "postgres": "^3.4.5",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "dotenv": "^16.4.7",
    "drizzle-kit": "0.31.8",
    "tsx": "^4.19.2",
    "typescript": "5.9.3",
    "vitest": "^4.0.16"
  }
}
