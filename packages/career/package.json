{
  "name": "@hominem/career-services",
  "version": "0.0.0",
  "description": "Job application and career management services",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts",
    "./tools": "./src/career.tools.ts"
  },
  "scripts": {
