{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Data Package",
  "extends": "../tsconfig/library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@hominem/ui/*": ["../ui/src/*"],
      "@hominem/ui": ["../ui/src/index.ts"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.json"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
