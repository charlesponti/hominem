{
  "name": "@hominem/health-services",
  "version": "0.0.0",
  "description": "Health, workout, and mental wellness services",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "development": "./src/index.ts",
      "default": "./build/index.js"
    },
    "./tools": {
      "types": "./build/health.tools.d.ts",
      "development": "./src/health.tools.ts",
      "default": "./build/health.tools.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "typecheck": "tsc --noEmit",
    "dev": "tsc -b -w",
    "format": "bunx oxfmt ./src",
    "lint": "bunx oxlint ./src",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hominem/db": "workspace:*",
    "@tanstack/ai": "0.2.0",
    "ai": "^4.3.16",
    "drizzle-orm": "0.45.1",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.18.13",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
