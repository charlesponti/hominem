{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "UI Package",
  "extends": "../tsconfig/library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "jsx": "react-jsx",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "incremental": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "./src/test-utils.tsx",
    "./src/**/*.test.tsx",
    "build",
    "dist"
  ]
}