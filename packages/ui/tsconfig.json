{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "UI Package",
  "extends": "../tsconfig/library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.json"],
  "exclude": ["node_modules"]
}
