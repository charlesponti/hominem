{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "composite": false,
    "incremental": false,
    "emitDeclarationOnly": true,
    "outDir": "./build"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "build"
  ]
}
