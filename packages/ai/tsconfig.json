{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "AI Package",
  "extends": "../tsconfig/library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "incremental": true,
    "emitDeclarationOnly": true,
    "outDir": "./build",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.json"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
