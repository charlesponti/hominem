{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "AI Package",
  "extends": "@hominem/tsconfigs/library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "ES2022",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./build",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
