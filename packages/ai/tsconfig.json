{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strictFunctionTypes": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/**/*",
    "../../apps/cli/src/commands/ai/event-info.agent.ts",
    "../../apps/cli/src/commands/ai/tour.tools.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}