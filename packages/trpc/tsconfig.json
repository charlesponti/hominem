{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": true,
    "sourceMap": false,
    "noEmit": false,
    "composite": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "build", "src/test/**", "**/*.test.ts", "**/*.spec.ts", "src/routers/finance/**"]
}
