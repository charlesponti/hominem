{
  "name": "@hominem/notes-services",
  "version": "0.0.0",
  "description": "Notes and content management services",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf build",
    "typecheck": "tsc --noEmit",
    "dev": "tsc -b -w",
    "format": "bunx oxfmt ./src",
    "lint": "bunx oxlint ./src",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.1.20",
    "@hominem/ai": "workspace:*",
    "@hominem/db": "workspace:*",
    "ai": "^4.3.16",
    "drizzle-orm": "0.45.1",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.18.13",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
