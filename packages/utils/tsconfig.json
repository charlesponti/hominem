{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Utils Package",
  "extends": "@hominem/tsconfigs/library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "./src",
    "module": "ES2022",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "references": [
    {
      "path": "../ai"
    }
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.json"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
