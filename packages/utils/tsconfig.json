{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Utils Package",
  "extends": "../tsconfig/library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "./src",
    "module": "ES2022",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "test": [
        "./test/*"
      ],
      "@hominem/ui/*": [
        "../ui/src/*"
      ],
      "@hominem/ui": [
        "../ui/src/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "../ai"
    }
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "build",
    "dist"
  ]
}