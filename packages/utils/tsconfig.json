{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Utils Package",
  "extends": "@hominem/tsconfigs/library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "./src",
    "module": "ES2022",
    "paths": {
      "@/*": ["./src/*"],
      "test": ["./test/*"]
    }
  },
  "references": [
    {
      "path": "../ai"
    }
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.json",
    "test/finance-analyze.service.integration.test.ts",
    "test/finance-test-seed.ts",
    "test/runway.service.test.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
