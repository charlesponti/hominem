{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Utils Package",
  "extends": "../tsconfig/library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "./src",
    "module": "ES2022",
    "paths": {
      "@/*": ["./src/*"],
      "test": ["./test/*"],
      "@hominem/ui": ["../ui/src/index.ts"],
      "@hominem/ui/*": ["../ui/src/*"],
      "@hominem/utils": ["./src/index.ts"],
      "@hominem/utils/*": ["./src/*"],
      "@hominem/data": ["../data/src/index.ts"],
      "@hominem/data/*": ["../data/src/*"],
      "@hominem/ai": ["../ai/src/index.ts"],
      "@hominem/ai/*": ["../ai/src/*"],
      "@hominem/auth": ["../auth/src/index.ts"],
      "@hominem/auth/*": ["../auth/src/*"]
    }
  },
  "references": [
    {
      "path": "../ai"
    }
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.json"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
