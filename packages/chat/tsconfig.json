{
  "extends": "../../tsconfig.profiles/package-bundler.json",
  "compilerOptions": {
    "tsBuildInfoFile": "../../.cache/chat.tsbuildinfo",
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".turbo",
    ".cache",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__",
    "**/__mocks__",
    "*.tsbuildinfo",
    ".react-router/cache"
  ]
}
