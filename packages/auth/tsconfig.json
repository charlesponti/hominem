{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Auth Package",
  "extends": "../tsconfig/workspace.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "types": [
      "vite/client"
    ],
    "lib": [
      "ES2022",
      "DOM"
    ],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "build"
  ],
  "references": [
    {
      "path": "../data"
    }
  ]
}