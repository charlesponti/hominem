{
  "name": "@hominem/auth",
  "version": "0.0.0",
  "description": "Unified authentication package for Hominem apps",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server-index": {
      "import": "./dist/server-index.mjs",
      "require": "./dist/server-index.js",
      "types": "./dist/server-index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hominem/data": "workspace:*",
    "@supabase/supabase-js": "^2.77.0",
    "@supabase/ssr": "^0.6.1",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@hominem/tsconfigs": "workspace:*",
    "@types/node": "^22.18.13",
    "@types/react": "^19.2.2",
    "tsup": "^8.5.0",
    "typescript": "5.7.3"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0"
  }
}
