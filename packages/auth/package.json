{
  "name": "@hominem/auth",
  "version": "0.0.0",
  "description": "Unified authentication package for Hominem apps",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./build/index.d.ts",
      "default": "./build/index.js"
    },
    "./types": {
      "development": "./src/types.ts",
      "types": "./build/types.d.ts",
      "default": "./build/types.js"
    },
    "./server": {
      "development": "./src/server-index.ts",
      "types": "./build/server-index.d.ts",
      "default": "./build/server-index.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hominem/db": "workspace:*",
    "@hominem/services": "workspace:*",
    "@hominem/utils": "workspace:*",
    "better-auth": "^1.4.12",
    "@supabase/ssr": "0.8.0",
    "@supabase/supabase-js": "2.88.0",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.18.13",
    "@types/react": "^19.2.2",
    "react": "^19.2.3",
    "typescript": "5.9.3",
    "vite": "7.3.0"
  },
  "peerDependencies": {
    "react": "^19.2.3"
  }
}
