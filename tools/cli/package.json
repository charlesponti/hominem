{
  "name": "@hominem/cli",
  "version": "1.0.0",
  "description": "Unified CLI for hominem tools",
  "bin": {
    "hominem": "./dist/hominem"
  },
  "type": "module",
  "scripts": {
    "dev": "bun src/dev.ts",
    "build": "bun run build:core && bun run build:features",
    "build:core": "rm -rf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && bun build ./src/cli.ts --compile --outfile dist/hominem && node scripts/verify-bundle-size.mjs",
    "build:features": "bun build src/services/agent-server/index.ts --outdir dist/agent --target bun",
    "build:agent": "bun build src/services/agent-server/index.ts --outdir dist/agent --target bun",
    "start:agent": "bun run src/services/agent-server/index.ts",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test": "bun test && node ./test/plugin-registration.test.js",
    "lint": "oxlint --tsconfig tsconfig.json \"src/**/*.{ts,tsx,js,jsx}\" \"test/**/*.{ts,tsx,js,jsx}\"",
    "format": "oxfmt src test"
  },
  "dependencies": {
    "axios": "1.12.0",
    "chalk": "^5.4.1",
    "consola": "^3.4.2",
    "dotenv": "17.2.3",
    "get-port": "^7.1.0",
    "keytar": "^7.9.0",
    "open": "^10.1.1",
    "ora": "^9.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "*",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.0.0"
  }
}
