{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "../../.cache/tool-cli.tsbuildinfo",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "maxNodeModuleJsDepth": 0,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "disableSourceOfProjectReferenceRedirect": false,
    "verbatimModuleSyntax": true,
    "rootDir": ".",
    "jsx": "react-jsx",
    "types": [
      "node",
      "bun-types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vitest.config.mts",
    "../../types/**/*.d.ts"
  ],
  "references": [
    {
      "path": "../../packages/hono-rpc"
    },
    {
      "path": "../../packages/hono-client"
    }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo",
    ".cache",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__",
    "**/__mocks__",
    "*.tsbuildinfo"
  ]
}
