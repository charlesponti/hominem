{
  "extends": [
    "../../tsconfig.base.json",
    "../../tsconfig.paths.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "types": [
      "node",
      "bun-types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "noEmit": true
  },
  "references": [
    {
      "path": "../../packages/ai"
    },
    {
      "path": "../../packages/services"
    },
    {
      "path": "../../packages/trpc"
    },
    {
      "path": "../../packages/utils"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
