{
  "css.validate": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "editor.defaultFormatter": "oxc.oxc-vscode",
  "editor.formatOnSave": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.react-router/**": true,
    "**/.turbo/**": true,
    "**/*.tsbuildinfo": true,
    "**/build/**": true,
    "**/dist/**": true,
    "**/node_modules/**": true,
    "**/coverage/**": true
  },
  "github.copilot.chat.newWorkspace.useContext7": true,
  "npm.scriptRunner": "bun",
  "search.exclude": {
    "**/.react-router": true,
    "**/.turbo": true,
    "**/*.tsbuildinfo": true,
    "**/build": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/coverage": true
  },
  "typescript.tsserver.maxTsServerMemory": 16000,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "**/.git",
      "**/dist",
      "**/build",
      "**/.turbo",
      "**/coverage",
      "**/.react-router"
    ],
    "excludeFiles": ["**/*.tsbuildinfo"]
  },
  "typescript.tsserver.useSyntaxServer": "auto",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.tsserver.enableTracing": false,
  "typescript.enablePromptUseWorkspaceTsdk": false,
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"]
  ],
  "tailwindCSS.experimental.configFile": "./packages/ui/src/styles/globals.css",
  "tailwindCSS.files.exclude": ["**/.git/**", "**/node_modules/**", "**/.next/**", "**/dist/**"],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.rootFontSize": 16,
  "terminal.integrated.shellIntegration.enabled": true
}
