{
    # Development-specific global options
    debug
    local_certs
    auto_https disable_redirects
    
    servers {
      # Timeouts
      timeouts {
          read_body 10s
          read_header 10s
          write 30s
          idle 60s
      }
    }
}

(common) {
    # Security headers
    header {
        # CORS for local development
        Access-Control-Allow-Origin "*"
        # Security headers
        Strict-Transport-Security "max-age=31536000;"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    # Enable compression
    encode zstd gzip

    # Basic logging for development
    log {
        output stdout
        format console
        level INFO
    }

    # Custom error pages
    handle_errors {
        respond "* {http.error.status_code} {http.error.status_text}" 
    }
}

rocco.hominem.localhost {
    import common
    reverse_proxy localhost:53422
}

api.hominem.localhost {
    import common
    reverse_proxy localhost:53421
}

app.hominem.localhost {
    import common
    reverse_proxy localhost:4444
}

data.hominem.localhost {
    import common
    reverse_proxy * localhost:4432
}
