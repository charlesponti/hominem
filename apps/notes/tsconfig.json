{
  "extends": ["../../tsconfig.base.web.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "rootDirs": [".", "./.react-router/types"],
    "jsx": "react-jsx",
    "types": ["node", "vite/client", "@testing-library/jest-dom"],
    "paths": {
      "~/*": ["./app/*"]
    },
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "../../.cache/app-notes.tsbuildinfo"
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    ".react-router/types/**/*",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".turbo",
    ".cache",
    "coverage",
    ".react-router/cache",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__",
    "**/__mocks__",
    "*.tsbuildinfo"
  ]
}
