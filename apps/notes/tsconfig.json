{
  "extends": "../../tsconfig.profiles/vite-app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "tsBuildInfoFile": "../../.cache/app-notes.tsbuildinfo",
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "types": [
      "node",
      "vite/client",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "~/*": [
        "./app/*"
      ]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    ".react-router/types/**/*",
    "vite.config.ts",
    "vitest.config.ts",
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".turbo",
    ".cache",
    "coverage",
    ".react-router/cache",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__",
    "**/__mocks__",
    "*.tsbuildinfo"
  ]
}
