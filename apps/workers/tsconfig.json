{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "API",
  "extends": "@hominem/tsconfigs/node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.test.ts",
  ]
}
