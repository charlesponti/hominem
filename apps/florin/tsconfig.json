{
  "extends": "../../packages/tsconfig/react.json",
  "include": ["app/**/*", ".react-router/types/**/*", "vite.config.ts", "vitest.config.ts"],
  "exclude": ["build", "public", "dist", "node_modules", ".turbo"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@hominem/ui/*": ["../../packages/ui/src/*"],
      "@hominem/ui": ["../../packages/ui/src/index.ts"]
    },
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "references": [
    {
      "path": "../../packages/ui"
    }
  ]
}
