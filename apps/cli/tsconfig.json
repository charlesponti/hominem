{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "CLI",
  "extends": "../../packages/tsconfig/node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "build",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "composite": true,
    "declaration": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "lib": [
      "dom"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@hominem/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@hominem/ui": [
        "../../packages/ui/src/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "../../packages/utils"
    },
    {
      "path": "../../packages/ai"
    },
    {
      "path": "../../packages/ui"
    }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts"
  ]
}