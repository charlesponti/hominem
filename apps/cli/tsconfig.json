{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "CLI",
  "extends": "@hominem/tsconfigs/node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "build",
    "composite": true,
    "declaration": true,
    "downlevelIteration": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "references": [
    {
      "path": "../../packages/utils"
    },
    {
      "path": "../../packages/ai"
    }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.test.ts"
  ]
}