{
  "name": "@hominem/mcp",
  "version": "0.1.0",
  "description": "the hominem model context protocol (mcp) client",
  "private": true,
  "type": "module",
  "bin": {
    "hominem-mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir build --target=node --format=cjs --external=@colors/colors --external=logform --external=utils --external=@modelcontextprotocol/sdk --external='node:*' --external=playwright --external=playwright-chromium --external=chromium-bidi --external=electron",
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "format": "biome format ./src --fix"
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^0.1.17",
    "@browserbasehq/stagehand": "^2.4.0",
    "@hominem/data": "workspace:*",
    "@hominem/utils": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "ai": "^4.3.16",
    "axios": "1.8.4",
    "dotenv": "^16.5.0",
    "playwright": "^1.51.1",
    "playwright-chromium": "^1.51.1",
    "tsdown": "^0.10.0",
    "zod": "4.0.5"
  },
  "devDependencies": {
    "@hominem/tsconfigs": "workspace:*",
    "@vitest/ui": "^4.0.3",
    "vitest": "4.0.16"
  }
}
