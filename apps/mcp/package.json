{
  "name": "@hominem/mcp",
  "version": "0.1.0",
  "description": "the hominem model context protocol (mcp) client",
  "private": true,
  "type": "module",
  "bin": {
    "hominem-mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsup src/index.ts -d build --format esm --tsconfig ./tsconfig.json --treeshake --splitting --inject-style",
    "dev": "npx tsx --watch src/index.ts",
    "prepare": "npm run build",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^0.1.13",
    "@hominem/utils": "*",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "ai": "^4.1.54"
  },
  "devDependencies": {
    "tsup": "^8.4.0"
  }
}