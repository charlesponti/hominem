{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "MCP",
  "extends": "../../packages/tsconfig/node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "build",
    "composite": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@/*": ["src/*"],
      "@hominem/ui/*": ["../../packages/ui/src/*"],
      "@hominem/ui": ["../../packages/ui/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "**/*.spec.ts"]
}
