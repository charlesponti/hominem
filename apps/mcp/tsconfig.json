{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "MCP",
  "extends": "@hominem/tsconfigs/node.json",
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "build",
    "composite": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../../packages/utils"
    },
    {
      "path": "../../packages/ai"
    }
  ]
}