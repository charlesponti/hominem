{
  "extends": ["../../tsconfig.base.json", "../../tsconfig.paths.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "rootDirs": [".", "./.react-router/types"],
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "paths": {
      "~/*": ["./app/*"]
    },
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "references": [
    { "path": "../../packages/auth" },
    { "path": "../../packages/db" },
    { "path": "../../packages/services" },
    { "path": "../../packages/utils" }
  ],
  "include": ["app/**/*.ts", "app/**/*.tsx", ".react-router/types/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".turbo",
    ".react-router/cache",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}
