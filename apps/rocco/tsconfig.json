{
  "extends": "../../packages/tsconfig/react.json",
  "include": ["**/*", "**/.server/**/*", "**/.client/**/*", ".react-router/types/**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@hominem/ui": ["../../packages/ui/src/index.ts"],
      "@hominem/ui/*": ["../../packages/ui/src/*"],
      "@hominem/utils": ["../../packages/utils/src/index.ts"],
      "@hominem/utils/*": ["../../packages/utils/src/*"],
      "@hominem/data": ["../../packages/data/src/index.ts"],
      "@hominem/data/*": ["../../packages/data/src/*"],
      "@hominem/chat": ["../../packages/chat/src/index.ts"],
      "@hominem/chat/*": ["../../packages/chat/src/*"],
      "@hominem/ai": ["../../packages/ai/src/index.ts"],
      "@hominem/ai/*": ["../../packages/ai/src/*"],
      "@hominem/auth": ["../../packages/auth/src/index.ts"],
      "@hominem/auth/*": ["../../packages/auth/src/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
