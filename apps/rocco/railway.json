{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun run build --force"
  },
  "deploy": {
    "startCommand": "cd apps/rocco && bun run start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "NEVER"
  }
}