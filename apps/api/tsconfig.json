{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "API",
  "extends": "../../packages/tsconfig/node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@hominem/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@hominem/ui": [
        "../../packages/ui/src/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "../../packages/ai"
    },
    {
      "path": "../../packages/auth"
    },
    {
      "path": "../../packages/data"
    },
    {
      "path": "../../packages/utils"
    }
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}