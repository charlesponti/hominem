{
  "name": "@hominem/mobile",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.11.0"
  },
  "main": "expo-router/entry",
  "scripts": {
    "dev": "NODE_ENV=development expo start --dev-client",
    "start": "NODE_ENV=development expo start --dev-client",
    "lint": "bunx oxlint ./app",
    "format": "bunx oxfmt ./app",
    "ios": "NODE_ENV=development expo run:ios",
    "android": "NODE_ENV=development expo run:android",
    "build:simulator:android": "NODE_ENV=development eas build --profile simulator --platform android",
    "build:simulator:ios": "NODE_ENV=development eas build --profile simulator --platform ios",
    "build:development:android": "NODE_ENV=development eas build --profile development --platform android",
    "build:development:ios": "NODE_ENV=development eas build --profile development --platform ios",
    "build:dev:ios": "bun run validate:eas:profiles && NODE_ENV=development eas build --profile development --platform ios",
    "build:preview:android": "NODE_ENV=preview eas build --profile preview --platform android",
    "build:preview:ios": "NODE_ENV=preview eas build --profile preview --platform ios",
    "build:production:android": "NODE_ENV=production eas build --profile production --platform android",
    "build:production:ios": "NODE_ENV=production eas build --profile production --platform ios",
    "build:update:preview": "NODE_ENV=production eas update --platform ios --branch preview --clear-cache",
    "prebuild": "expo prebuild",
    "web": "expo start --web",
    "validate:eas:profiles": "bash scripts/validate-eas-profile.sh",
    "test:e2e:preflight": "bash .maestro/scripts/validate-flows.sh",
    "test:e2e": "maestro test .maestro/flows/smoke/full.yaml",
    "test:e2e:auth": "maestro test .maestro/flows/auth",
    "test:e2e:focus": "maestro test .maestro/flows/focus",
    "test:e2e:recording": "maestro test .maestro/flows/recording",
    "test:e2e:chat": "maestro test .maestro/flows/chat",
    "test:e2e:smoke": "maestro test .maestro/flows/smoke/app-launch.yaml"
  },
  "dependencies": {
    "@ai-sdk/react": "^1.2.12",
    "@expo/vector-icons": "15.0.3",
    "@hominem/hono-client": "workspace:*",
    "@hominem/hono-rpc": "workspace:*",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/netinfo": "11.4.1",
    "@react-navigation/bottom-tabs": "^7.0.0",
    "@react-navigation/drawer": "^7.0.0",
    "@react-navigation/native": "^7.0.0",
    "@sentry/cli": "2.55.0",
    "@sentry/react-native": "~7.2.0",
    "@shopify/flash-list": "2.0.2",
    "@shopify/restyle": "^2.4.4",
    "@tanstack/react-query": "^5.60.5",
    "ai": "^4.3.19",
    "better-auth": "^1.4.19",
    "expo": "~54.0.0",
    "expo-apple-authentication": "~8.0.8",
    "expo-auth-session": "~7.0.10",
    "expo-av": "16.0.8",
    "expo-blur": "~15.0.8",
    "expo-build-properties": "~1.0.10",
    "expo-constants": "~18.0.13",
    "expo-crypto": "~15.0.8",
    "expo-dev-client": "~6.0.20",
    "expo-device": "~8.0.10",
    "expo-file-system": "~19.0.21",
    "expo-font": "~14.0.11",
    "expo-image-picker": "~17.0.10",
    "expo-keep-awake": "~15.0.8",
    "expo-linear-gradient": "~15.0.8",
    "expo-linking": "~8.0.11",
    "expo-notifications": "~0.32.16",
    "expo-router": "~6.0.23",
    "expo-secure-store": "~15.0.8",
    "expo-speech": "~14.0.8",
    "expo-status-bar": "~3.0.9",
    "expo-sqlite": "~15.1.0",
    "expo-system-ui": "~6.0.9",
    "expo-updates": "~29.0.16",
    "expo-web-browser": "~15.0.10",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "@react-native-community/datetimepicker": "8.6.0",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-ios-context-menu": "3.2.1",
    "react-native-ios-utilities": "5.2.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-markdown-display": "^7.0.2",
    "react-native-reanimated": "~4.1.1",
    "react-native-redash": "^18.1.3",
    "react-native-safe-area-context": "5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "~0.20.0",
    "react-native-worklets": "0.5.1",
    "zeego": "3.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@better-auth/expo": "^1.4.19",
    "@parcel/watcher": "^2.5.0",
    "@types/d3-scale": "^4.0.8",
    "@types/react": "19.1.17",
    "@types/react-dom": "19.1.11",
    "expo-atlas": "^0.4.0",
    "reactotron-react-native": "^5.1.10",
    "typescript": "5.9.3"
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native-safe-area-context"
      ]
    },
    "doctor": {
      "reactNativeDirectoryCheck": {
        "listUnknownPackages": [
          "@biomejs/biome"
        ]
      }
    }
  },
  "private": true,
  "packageManager": "npm@10.1.0",
  "trustedDependencies": [
    "@clerk/shared",
    "@parcel/watcher",
    "@sentry/cli",
    "browser-tabs-lock",
    "core-js"
  ]
}
