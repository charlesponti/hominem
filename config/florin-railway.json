{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "installCommand": "bun install --no-save",
    "buildCommand": "bun turbo run build --filter=@hominem/florin --force"
  },
  "deploy": {
    "startCommand": "cd apps/florin && bun run start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "NEVER"
  }
}
