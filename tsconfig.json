{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./packages/tsconfig/base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "paths": {
      "@utils/*": [
        "packages/utils/src/*"
      ]
    },
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [],
  "references": [
    {
      "path": "./apps/api"
    },
    {
      "path": "./apps/cli"
    },
    {
      "path": "./apps/mcp"
    },
    {
      "path": "./apps/florin"
    },
    {
      "path": "./packages/ai"
    },
    {
      "path": "./packages/utils"
    }
  ],
  "display": "@hominem/root",
  "include": [
    "apps",
    "packages"
  ]
}
