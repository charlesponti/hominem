{
  "extends": "./packages/tsconfig/base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@hominem/utils/*": [
        "packages/utils/src/*"
      ],
      "@ponti/ai/*": [
        "packages/ai/src/*"
      ],
      "@cli/*": [
        "apps/cli/src/*"
      ],
      "@api/*": [
        "apps/api/src/*"
      ],
      "@web/*": [
        "apps/web/*"
      ]
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/utils/vitest.config.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
