auto-install-peers=true
# Automatically install peer dependencies when installing a package.

registry=https://registry.npmjs.org/
# Set the default registry to the official npm registry.

resolve-peers=true
# Resolve peer dependencies from the node_modules directory.

strict-peer-dependencies=false
# Allow installation of packages even if peer dependencies are not met.

legacy-peer-deps=true
# Use the legacy behavior for resolving peer dependencies, which can be useful for avoiding conflicts.
