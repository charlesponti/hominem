{
  "name": "hominem",
  "version": "1.0.0",
  "private": true,
  "description": "hominem",
  "keywords": [],
  "homepage": "https://github.com/charlesponti/hominem#readme",
  "bugs": {
    "url": "https://github.com/charlesponti/hominem/issues"
  },
  "license": "ISC",
  "author": {
    "name": "chase bridges",
    "email": "code@hominem.io",
    "url": "https://ponti.io/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlesponti/hominem.git"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "tools/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check": "bun run validate-db-imports && bun run typecheck && bun run lint && bun run verify:voice",
    "clean": "turbo run clean",
    "db:migrate": "turbo run db:migrate",
    "dev": "turbo dev --ui tui",
    "lint": "bun run lint:styles && turbo run lint",
    "lint:styles": "bunx stylelint \"{apps,packages,services}/**/*.css\" --config tools/stylelint-config-void.cjs",
    "lint:copy": "bun tools/void-copy-lint.mjs",
    "format": "turbo run format",
    "validate-db-imports": "node scripts/validate-db-imports.js",
    "prepush": "bun run test",
    "prerelease": "bun run test",
    "start:dev": "bun services/api/src/index.ts",
    "start:prod": "bun services/api/src/index.ts",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "typecheck:rocco": "npx tsc -p apps/rocco/tsconfig.json --noEmit",
    "typecheck:workspace": "npx tsc -p tsconfig.json --noEmit",
    "verify:mobile:design": "bash scripts/verify-mobile-design.sh",
    "verify:mobile": "bunx tsc -p apps/mobile/tsconfig.json --noEmit && bun run verify:mobile:design && bun run --filter @hominem/hono-rpc typecheck",
    "verify:voice": "bash scripts/verify-voice-architecture.sh",
    "typecheck:ci": "turbo run typecheck --concurrency=4 --continue",
    "type-performance:run-all": "bun run scripts/type-performance.ts run-all",
    "type-performance:analyze": "bun run scripts/type-performance.ts analyze",
    "type-performance:audit": "bun run scripts/type-performance.ts audit",
    "type-performance:diagnose": "bun run scripts/type-performance.ts diagnose",
    "type-performance:tsserver": "bun run scripts/type-performance.ts tsserver",
    "type-performance:graph": "bun run scripts/type-performance.ts graph",
    "type-performance:instantiations": "bun run scripts/type-performance.ts instantiations",
    "type-performance:dashboard": "bun run scripts/generate-dashboard.ts",
    "type-performance:compare": "bun run scripts/compare-type-performance.ts",
    "type-analysis:rocco": "go run scripts/oss-type-report.go --project apps/rocco/tsconfig.json --trace-dir .type-analysis/rocco-only --tsserver-seconds 10",
    "type-analysis:workspace": "go run scripts/oss-type-report.go --project tsconfig.json --trace-dir .type-analysis/workspace --tsserver-seconds 10"
  },
  "dependencies": {
    "drizzle-orm": "0.45.1",
    "react": "^19.2.3",
    "react-dom": "^19.1.0",
    "react-router": "7.12.0"
  },
  "devDependencies": {
    "@ark/attest": "^0.56.0",
    "@tanstack/ai": "^0.2.0",
    "@turbo/gen": "2.6.3",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "latest",
    "oxfmt": "0.31.0",
    "oxlint": "1.46.0",
    "stylelint": "^16.9.0",
    "tsx": "^4.19.3",
    "turbo": "^2.8.6",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "4.0.16"
  },
  "overrides": {
    "@hono/zod-validator": "0.7.6",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "drizzle-kit": "0.31.8",
    "drizzle-orm": "0.45.1",
    "hono": "4.11.6",
    "vite": "7.3.1",
    "zod": "4.3.6"
  },
  "engines": {
    "bun": ">=1.1.0",
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.3.0"
}
