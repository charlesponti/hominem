{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env.local",
    "**/.env.*local"
  ],
  "globalEnv": [
    "APP_URL",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "CHROMA_URL",
    "CLERK_PUBLISHABLE_KEY",
    "CLERK_SECRET_KEY",
    "COOKIE_DOMAIN",
    "COOKIE_NAME",
    "COOKIE_SALT",
    "COOKIE_SECRET",
    "DATABASE_URL",
    "GITHUB_TOKEN",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "GOOGLE_REDIRECT_URI",
    "JWT_SECRET",
    "OPENAI_API_KEY",
    "OPENAI_ORG_ID",
    "REDIS_URL",
    "SENDGRID_API_KEY"
  ],
  "tasks": {
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "dist/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [],
      "outputs": [
        "coverage/**"
      ]
    },
    "format": {
      "outputs": []
    },
    "migrate": {
      "cache": false
    },
    "start": {
      "dependsOn": [
        "build"
      ]
    }
  }
}