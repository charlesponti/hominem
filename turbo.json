{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env.local", "**/.env.*local"],
  "globalEnv": [
    "SUPABASE_URL",
    "SUPABASE_SERVICE_ROLE_KEY",
    "VITE_APP_BASE_URL",
    "VITE_SUPABASE_URL",
    "VITE_SUPABASE_ANON_KEY",
    "COOKIE_NAME",
    "COOKIE_SALT",
    "COOKIE_SECRET",
    "DATABASE_URL",
    "GITHUB_TOKEN",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "GOOGLE_REDIRECT_URI",
    "OPENAI_API_KEY",
    "OPENAI_ORG_ID",
    "REDIS_URL",
    "RESEND_API_KEY"
  ],
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "build/**", "dist/**", "*.tsbuildinfo"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@hominem/data#build"]
    },
    "test": {
      "dependsOn": [],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "db:migrate": {
      "cache": false
    },
    "start": {
      "dependsOn": ["build"]
    },
    "clean": {
      "cache": false
    }
  }
}
