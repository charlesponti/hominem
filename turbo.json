{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["package.json", "bun.lock", ".env.local", "**/.env.*local"],
  "globalEnv": [
    "SUPABASE_URL",
    "SUPABASE_SERVICE_ROLE_KEY",
    "VITE_APP_BASE_URL",
    "VITE_SUPABASE_URL",
    "VITE_SUPABASE_ANON_KEY",
    "COOKIE_NAME",
    "COOKIE_SALT",
    "COOKIE_SECRET",
    "DATABASE_URL",
    "GITHUB_TOKEN",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "GOOGLE_REDIRECT_URI",
    "OPENAI_API_KEY",
    "OPENAI_ORG_ID",
    "REDIS_URL",
    "RESEND_API_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        ".react-router/**",
        "build/**",
        "dist/**",
        "*.tsbuildinfo"
      ]
    },
    "check": {
      "dependsOn": ["lint", "typecheck", "test"]
    },
    "clean": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["@hominem/data#build"],
      "persistent": true
    },
    "format": {
      "inputs": ["src/**/*.{ts,tsx,js,jsx,json,md}", "app/**/*.{ts,tsx,js,jsx,json,md}"],
      "outputs": []
    },
    "lint": {
      "inputs": ["src/**/*.{ts,tsx,js,jsx,json,md}", "app/**/*.{ts,tsx,js,jsx,json,md}"],
      "outputs": []
    },
    "start": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "app/**/*.{ts,tsx,js,jsx}",
        "test/**/*.{ts,tsx,js,jsx}"
      ],
      "outputs": []
    },
    "typegen": {
      "outputs": [".react-router/**", "app/routes/+types/**/*"]
    },
    "typecheck": {
      "dependsOn": ["^build", "typegen"],
      "inputs": ["**/*.ts", "**/*.tsx", "tsconfig.json"],
      "outputs": ["*.tsbuildinfo"]
    }
  }
}
