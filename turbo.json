{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env.local",
    "**/.env.*local"
  ],
  "globalEnv": [
    "APP_URL",
    "COOKIE_SECRET",
    "DATABASE_URL",
    "GITHUB_TOKEN",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "GOOGLE_REDIRECT_URI",
    "OPENAI_API_KEY",
    "OPENAI_ORG_ID",
    "REDIS_URL",
    "SENDGRID_API_KEY",
    "SUPABASE_URL",
    "SUPABASE_ANON_KEY",
    "SUPABASE_SERVICE_ROLE_KEY",
    "VITE_SUPABASE_URL",
    "VITE_SUPABASE_ANON_KEY"
  ],
  "tasks": {
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "dist/**",
        "*.tsbuildinfo"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [],
      "outputs": [
        "coverage/**"
      ]
    },
    "format": {
      "outputs": []
    },
    "migrate": {
      "cache": false
    },
    "start": {
      "dependsOn": [
        "build"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}