{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": [
		"APP_URL",
		"COOKIE_DOMAIN",
		"COOKIE_NAME",
		"COOKIE_SALT",
		"COOKIE_SECRET",
		"DATABASE_URL",
		"GITHUB_TOKEN",
		"GOOGLE_CLIENT_ID",
		"GOOGLE_CLIENT_SECRET",
		"GOOGLE_REDIRECT_URI",
		"JWT_SECRET",
		"OPENAI_API_KEY",
		"OPENAI_ORG_ID",
		"SENDGRID_API_KEY",
		"REDIS_URL"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "build"]
		},
		"lint": {},
		"test": {},
		"migrate": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"dependsOn": ["^build"]
		}
	}
}
